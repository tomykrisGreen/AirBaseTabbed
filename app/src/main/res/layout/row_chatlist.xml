<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:contentPadding="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="10dp">


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profileIvChatList"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_default_img"/>

            <ImageView
                android:id="@+id/onlineStatusIv"
                android:layout_width="25dp"
                android:layout_height="25dp"/>

            <TextView
                android:id="@+id/nameTvChatList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="His Name"
                android:singleLine="true"
                android:ellipsize="marquee"
                android:layout_marginStart="5dp"
                android:textColor="@color/colorBlack"
                android:textSize="18sp"
                android:layout_toEndOf="@id/profileIvChatList"
                android:layout_toRightOf="@id/profileIvChatList"/>

            <TextView
                android:id="@+id/lastMessageTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Last Message"
                android:singleLine="true"
                android:ellipsize="marquee"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@id/profileIvChatList"
                android:layout_toRightOf="@id/profileIvChatList"
                android:layout_below="@id/nameTvChatList"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#F5F0F0"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>