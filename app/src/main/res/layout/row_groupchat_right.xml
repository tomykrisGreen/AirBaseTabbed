<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/messageLayoutGroup"
    android:padding="2dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/message_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentEnd="true"
            android:padding="3dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:background="@drawable/bg_sender">

            <TextView
                android:id="@+id/nameTv_GroupChat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="250dp"
                android:maxLines="1"
                android:text="Name"
                android:visibility="gone"
                android:layout_marginStart="5dp"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/messageTv_GroupChat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="250dp"
                android:textSize="16sp"
                android:textColor="@color/colorBlack"
                android:text="His Message"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="7dp"/>

            <TextView
                android:id="@+id/timeTv_GroupChat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time"
                android:textColor="#615C5C"
                android:textSize="10sp"
                android:layout_gravity="right"
                android:layout_marginEnd="13dp"
                android:layout_marginStart="3dp"
                android:layout_marginBottom="2dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentEnd="true"
            android:padding="3dp"
            android:background="@drawable/bg_sender">

            <ImageView
                android:id="@+id/messageIv_GroupChat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="250dp"
                android:maxHeight="300dp"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:src="@drawable/ic_image_black"
                android:background="@drawable/bg_sender"/>

            <TextView
                android:id="@+id/timeTv_GroupChat_Iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time"
                android:textColor="#615C5C"
                android:textSize="10sp"
                android:layout_gravity="right"
                android:layout_marginBottom="2dp"
                android:layout_marginEnd="13dp"/>

        </LinearLayout>
    </RelativeLayout>



</LinearLayout>